{
	"repositoryUrl": "https://github.com/mjohnson9/roadie_ios.git",
	"preset": "conventionalcommits",
	"plugins": [
		"@semantic-release/commit-analyzer",
		"@semantic-release/release-notes-generator",
		["@semantic-release/changelog", {
			"changelogFile": "CHANGELOG.md",
		}],
		["@semantic-release/exec", {
			"prepareCmd": "plutil -replace CFBundleVersion -string '${nextRelease.version}' iOS/Info.plist iosUnitTests/Info.plist; plutil -replace CFBundleShortVersionString -string '${nextRelease.version}' iOS/Info.plist iosUnitTests/Info.plist"
		}],
		["@semantic-release/git", {
			"assets": ["CHANGELOG.md", "iOS/Info.plist", "iosUnitTests/Info.plist"],
			"message": "chore(release): bumped version to v${nextRelease.version}\n\n${nextRelease.notes}"
		}],
	]
}
